<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <polardreams.de.happydrink.supportlibs.SecretTextView
        android:id="@+id/txt"
        android:layout_width="250dip"
        android:layout_height="32dip"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dip"
        android:layout_marginTop="8dip"
        android:gravity="center"
        android:text="@string/splash_screen_text"
        android:textColor="@android:color/background_light"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

    </polardreams.de.happydrink.supportlibs.SecretTextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="105dip"
        android:layout_height="118dip"
        android:layout_marginTop="228dip"
        android:translationX="-50dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/splash" />


</android.support.constraint.ConstraintLayout>